{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "outDir": "./dist"
    },
    "include": [
        "app.ts",
        "commands/*.ts",
        "events/*.ts",
        "lib/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}